<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><%= @course.title %></h1>
  <br />
  <%= image_tag @course.image.url, class: 'img-fluid-height' %>
  <div class="row">
    <div class="col-sm-4 col-12 text-center">
      <br />
      <% if current_user && current_user == @course.user%>
        <br />
        <%= link_to 'Administer', instructor_course_path(@course), class: 'btn btn-danger btn-large' %>
      <% else %>
        <% if current_user && current_user.enrolled_in?(@course) %>
          <h2 class="badge badge-info">You Are Enrolled!</h2>
        <% else %>
          <%= link_to 'Enroll', course_enrollments_path(@course), class: 'btn btn-primary', method: :post %>
        <% end %>
      <% end %>
      <span class="badge badge-default">
        <%= @course.cost %>
      </span>
    </div>
    <div class="col-sm-8 col-12">
      <br />
      <%= @course.description %>
    </div>
  </div>
  <div class="col-12">
    <% @course.sections.each do |section| %>
      <br />
      <div class="section">
        <h3><%= section.title %></h3>
        <div class="row">
          <% section.lessons.each do |lesson| %>
            <div class="col-12 col-sm-6">
              <div class="lesson text-center">
                <%= link_to lesson_path(lesson) do %>
                  <b><%= lesson.title %></b>
                  <br />
                  <%= lesson.subtitle %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <br class="clr" />
      </div>
    <% end %>
  </div>
</div>